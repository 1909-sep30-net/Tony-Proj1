@model YourStoreWeb.Models.ViewOrderDetailsModel

@{
    ViewData["Title"] = "Finish Order";
}



<div>
    <h4>ViewOrderDetailsModel</h4>
    <hr />
    <h5>You Have Purchased. Have a Nice Day! </h5>
    <table>
        @for (int i = 0; i < Model.Product.Count; i++)
        {
            var x = Model.Product.ElementAt(i).Key;
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => x.Name)</th>
                    <th>Picture</th>
                    <th>@Html.DisplayNameFor(model => x.ID)</th>
                    <th>@Html.DisplayNameFor(model => x.Cost)</th>

                    <th>Quantity</th>

                </tr>
            </thead>
            <tbody>
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => x.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => x.imageLoc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => x.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => x.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Product[x])
                    </td>


                </tr>
            </tbody>

        }

    </table>
</div>
<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>
